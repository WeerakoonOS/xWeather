<!DOCTYPE html>
<html>
  <head>
    <!-- header partial -->
    <% include partials/head %>
  </head>
  <body>
    <div class="topnav" id="myTopnav">
      <!-- navbar partial -->
      <% include  partials/header %>
    </div>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
          <input type="submit" class="ghost-button" value="Get Current Temperature">
        </form>
            <% if(weather !== null){ %>
            <p><%= weather %></p>
            <% } %>

            <% if(error !== null){ %>
            <p><%= error %></p>
            <% } %>
      </fieldset>
    </div>   
      <!-- footer partial -->
      <footer>
          <% include partials/footer %>
      </footer>
  </body>
</html>